{
    "manifest_version": 2,
    "name": "Tabs Saver",
    "version": "1.0",

    "description": "Saves all open tabs from to reopen later",

    "icons": {
        "48": "icons/tabs-48.png",
        "96": "icons/tabs-96.png"
      },

    "permissions": ["tabs"],

    "browser_action": {
        "default_icon": "button/button-18.png",
        "default_popup": "popup/popup.html",
        "browser_style": true
    }
}